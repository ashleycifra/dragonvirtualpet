<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChooseName"
    android:background="@drawable/bg_choose_name"
    >

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/egg_chosen"
        android:layout_width="70dp"
        android:layout_height="90dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="50dp"

        />



        <com.google.android.material.textfield.TextInputEditText

            android:id="@+id/enter_name_text"
            android:layout_width="230dp"
            android:layout_height="60dp"
        app:layout_constraintBottom_toTopOf="@+id/egg_chosen"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
          android:layout_marginBottom="50dp"
            android:textColorHint="@color/black"
            android:textAlignment="center"
            android:maxLines="1"
            android:inputType="text"
            android:textColor="@color/black"
            android:fontFamily="@font/depixel_bold"
            android:background="@drawable/layout_border"
            android:hint="@string/choose_name"
            android:maxLength="8"
            />



    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/confirm_name_btn"
        android:text="Confirm"
        android:fontFamily="@font/depixel_bold"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:layout_width="180sp"
        android:layout_height="wrap_content"
        android:background="@drawable/button_edges"
        app:layout_constraintTop_toBottomOf="@+id/egg_chosen"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"

        android:layout_marginTop="180dp"

        />



</androidx.constraintlayout.widget.ConstraintLayout>
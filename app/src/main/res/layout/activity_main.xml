<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_start"
    tools:context=".MainActivity">




    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/animation_awd"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="115dp"
        android:scaleX="-1"
        android:src="@drawable/animation_adult_white_dragon"
        app:layout_constraintLeft_toRightOf="@+id/animation_agd"
        app:layout_constraintTop_toBottomOf="@+id/start_btn"

        />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/animation_agd"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="115dp"
        android:layout_marginRight="170dp"
        android:src="@drawable/animation_adult_green_dragon"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/start_btn"

        />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/animation_pw"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="100dp"
        android:src="@drawable/animation_pygmy_wyvern"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/animation_ad"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="60dp"
        android:scaleX="-1"
        android:src="@drawable/animation_viridian_drake"
        app:layout_constraintLeft_toRightOf="@+id/animation_pw"
        app:layout_constraintTop_toTopOf="parent"

        />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/animation_vd"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="120dp"
        android:src="@drawable/animation_aqua_drake"
        app:layout_constraintLeft_toRightOf="@+id/animation_ad"
        app:layout_constraintTop_toTopOf="parent"


        />


    <TextView
        android:id="@+id/title"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="220dp"
        android:fontFamily="@font/depixel_bold"
        android:text="@string/start_screen"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="40sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/start_btn"
        android:layout_width="180sp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_edges"
        android:fontFamily="@font/depixel_bold"
        android:text="@string/start_btn"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title"

        />

</androidx.constraintlayout.widget.ConstraintLayout>